        <table width="100%" height="50" style="border:none;text-align: center; background-color:<%=fontColor%> ">
            <tr>
                <td style="width: 20%"></td>
                <td style="width: 20%">
                   <div style="color: white; border-right: 1px solid white;">Support</div>
                </td>
                <td style="width: 20%">
                   <div style="color: white; ">Terms of Use</div>
